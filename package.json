{
  "name": "flashback-usb",
  "version": "1.5.1a",
  "type": "module",
  "description": "USB Drive Inventory Management System",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"node scripts/wait-for-vite.js && electron .\"",
    "electron:dev": "electron .",
    "build": "vite build",
    "package": "vite build && electron-builder",
    "package:win": "vite build && electron-builder --win"
  },
  "dependencies": {
    "bwip-js": "^4.8.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "mysql2": "^3.11.0",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.0",
    "postcss": "^8.4.38",
    "svelte": "^5.0.0",
    "tailwindcss": "^3.4.4",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.flashback.usb-inventory",
    "productName": "FlashBack USB",
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "lazaroagomez",
      "repo": "flashbackv2",
      "private": true
    },
    "extraResources": [
      {
        "from": "static/wusbkit.exe",
        "to": "wusbkit.exe"
      },
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "static/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
